{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "strictNullChecks": true,
    "target": "ES2022",
    "lib": ["ES2022", "dom"],
    "types": ["cypress", "node"],
    "esModuleInterop": true,
    "moduleResolution": "Node16",
    "module": "Node16",
    "resolveJsonModule": true,
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["cypress/**/*.ts", "src/**/*.ts"],
}
